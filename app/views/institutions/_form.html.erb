<div class="container">
<div class="col s12">
<%= form_for(institution) do |f| %>
<% if institution.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(institution.errors.count, "error") %> prohibited this institution from being saved:</h2>

      <ul>
      <% institution.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="input-field col s12">
      <label for="first_name" class="active">
        Name</label>
        <%= f.text_field :name, class:'validate' %>
    </div>

    <div class="input-field col s12">
      <label for="first_name" class="active">
        Registration</label>
        <%= f.text_field :registration, class:'validate' %>
    </div>
  </div>
  <div class="row">
    <div class="input-field col s12">
      <label for="first_name" class="active">
        Email</label>
        <%= f.email_field :email, autofocus: true, class:'validate'%>
    </div>
  </div>
  <div class="row">
    <div class="input-field col s12">
      <label for="first_name" class="active">
        phone</label>
        <%= f.text_field :phone, class:'validate' %>
    </div>
  </div>
  <div class="row">
    <div class="input-field col s12">
    <label  class="active">
        Password</label>
      <%= f.password_field :password, autocomplete: "off", class:'validate' %>
    </div>
  </div>
  <div class="row">
    <div class="col s12">
      <div class="input-field inline">
      <div class="form-actions center">
          <i class="btn waves-effect waves-input-wrapper" style="">
          <%= f.submit "Salvar" , class:'waves-button-input'%>
            </i>
        </div>
      </div>
    </div>
  </div>
<% end %>
</div>
</div>