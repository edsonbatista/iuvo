<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Jobs</h1>

  <%= link_to 'New Job', new_job_path, class: "waves-effect waves-light btn" %>
  <table class="striped">
    <thead>
      <tr>
        <th>Institution</th>
        <th>Job type</th>
        <th>Title</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @jobs.each do |job| %>
        <tr>
          <td><%= job.institution.name %></td>
          <td><%= job.job_type.title %></td>
          <td><%= job.title %></td>
          <td><%= link_to 'Show', job %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

</div>
