<main>
<br>
<br>
<section id="login">
	<div class="container-fluid pt-3">
		<div class="row">
			<div class="col s4 offset-s4">
				<div class="row login-form">
					<div class="col s12">
						<div class="card hoverable">
							<div class="card-content">
								<span class="card-title center">Forgot your Password?</span>
								<div class="divider"></div>
								<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
									
									<div class="form-inputs row">
										<div class="input-field col s12 email required user_email">
					                        <i class="material-icons prefix">email</i>

					                          <%= f.email_field :email, autofocus: true, class:'validate string email required'%>

					                          <label
					                          class="email required" for="user_email"><abbr
					                          title="required"></abbr> Email</label>
				                          </div>
				                      </div>



									<div class="form-actions center">
										<i class="btn waves-effect waves-input-wrapper" style="">
										<input
											type="submit" name="commit"
											value="Send Me Reset Instructions" class="waves-button-input"
											data-disable-with="Send Me Reset Instructions">
											<%= f.submit "Send me reset password instructions"  , class:'waves-button-input'%>
										</i>
									</div>
								<% end %>
								<div class="card-action">
									<div class="devise-links">
										<%= render "devise/shared/links" %>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
</main>